@model IEnumerable<Ictshop.Models.Hangsanxuat>

@{ ViewBag.Title = "Index";
                Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml"; }

<h2 class="text-xl-center">Quản lý hãng điện thoại</h2>

<p>
    <button class="btn btn-success btn-sm border-dark">
        <i class="fas fa-plus-circle"></i>@Html.ActionLink("Thêm mới", "Create")
    </button>
</p>
<table class="table">
    <tr>

        <th>
            Mã hãng
        </th>
        <th>
            Tên hãng
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Mahang)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Tenhang)
    </td>
    <td>
        <button class="btn btn-warning btn-sm">@Html.ActionLink("Sửa", "Edit", new { id = item.Mahang })</button>  |
        <button class="btn btn-info btn-sm">@Html.ActionLink("Chi tiết", "Details", new { id = item.Mahang })</button>  |
        <button class="btn btn-danger btn-sm">@Html.ActionLink("Xoá", "Delete", new { id = item.Mahang })</button>
     
   
    </td>
</tr>}

</table>
