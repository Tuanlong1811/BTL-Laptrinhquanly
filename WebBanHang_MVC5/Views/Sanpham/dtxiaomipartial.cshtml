
<div class="row">
    <div class=" bg-danger"><h3 style="padding-left:20px"> XIAOMI </h3></div>
    @foreach (var item in Model)
    {
        <div class="col-md-3 col-sm-6">
            <a href="@Url.Action("xemchitiet", new {@Masp=item.Masp })">
                <img style="height:200px;" src=@Url.Content("~/Images/"+item.Anhbia) class="img-responsive" alt="" width="400" height="400" />
            </a>
            <center>
                <h3>@item.Tensp</h3>
                <h3 style="color:red">Giá: @item.Giatien</h3>
                <br />
                @using (Html.BeginForm("ThemGioHang", "GioHang", new { @iMasp = item.Masp, @strURL = Request.Url.ToString() }))
                {
                    <input type="submit" class="btn btn-danger" value="Mua hàng" id="bgnGioHang" />

                }

            </center>

        </div>
    }

</div>


